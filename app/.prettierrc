{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 80,
  "arrowParens": "always",
  "importOrder": [
    "^@api/(.*)$",
    "^@clients/(.*)$",
    "^@functions/(.*)$",
    "^@libs/(.*)$",
    "^@modules/(.*)$",
    "^@scripts/(.*)$",
    "^@tests/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
