{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 80,
  "arrowParens": "always",
  "importOrder": [
    "^@app/api/(.*)$",
    "^@app/clients/(.*)$",
    "^@app/functions/(.*)$",
    "^@app/libs/(.*)$",
    "^@lib/(.*)$",
    "^@app/modules/(.*)$",
    "^@app/scripts/(.*)$",
    "^@app/tests/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
